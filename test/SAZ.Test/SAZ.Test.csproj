<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>false</IsPackable>
		<RootNamespace>Knapcode.SAZ</RootNamespace>
		<AssemblyName>Knapcode.SAZ.Test</AssemblyName>
		<SuppressTfmSupportBuildErrors>true</SuppressTfmSupportBuildErrors>
		<HasVerify Condition="'$(TargetFramework)' != 'net8.0'">true</HasVerify>
		<DefineConstants Condition="'$(HasVerify)' == 'true'">$(DefineConstants);VERIFY</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" />
		<PackageReference Include="xunit" />
		<PackageReference Include="xunit.runner.visualstudio">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(HasVerify)' == 'true'">
		<PackageReference Include="Verify.DiffPlex" />
		<PackageReference Include="Verify.Http" />
		<PackageReference Include="Verify.Xunit" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\SAZ\SAZ.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="Xunit" />
	</ItemGroup>

	<ItemGroup>
		<None Update="TestData\httpbin-test.saz">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
